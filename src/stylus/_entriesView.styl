$mainViewTransitionTime = 0.4s

.entriesView
  position relative
  width 100%
  height 100%
  
  & > div
    display flex
    flex-direction row
    justify-content space-around
    align-items stretch
    overflow hidden
    height 100%
    width 100%
  
  .timeline
    width 30%
    height auto
    overflow auto
    border-right 1px solid $gray
    transition all $mainViewTransitionTime
    
  .toggle-timeline
    position absolute
    top 0.7em
    border none
    background-color $white
    color $gray
    transition left $mainViewTransitionTime
    padding 0
    font-size inherit
    font-family inherit
    transition color 0.3s linear

    &:hover
      color $black

    span
      font-family 'FontAwesome'    
      font-style normal
      font-weight normal
      line-height 1
      -webkit-font-smoothing antialiased
      
      &:before
        content $fa-var-chevron-left
        
    &.closed
      span:before
        content $fa-var-chevron-right
        
    +below($width-xs)
      display none


  .entryEditor
    height 100%
    transition width $mainViewTransitionTime
    

  &.split
    .timeline
      width 30%
      opacity 1
    .entryEditor
      width 70%
    .toggle-timeline
      left 32%

  &.noTimeline
    .timeline
      width 0
      opacity 0
    .entryEditor
      width 100%
    .toggle-timeline
      left 2%

