.mainView
  position relative
  width 100%
  height 100vh
  display flex
  flex-direction row
  justify-content space-around
  align-items stretch
  overflow hidden
  
  .timeline
    width 30%
    height auto
    overflow auto
    border-right 1px solid $gray
    
  .toggle-timeline
    position absolute
    left 30%
    top 0
    border none
    background-color $gray
    color $gray-light

    span
      font-family 'FontAwesome'    
      font-style normal
      font-weight normal
      line-height 1
      -webkit-font-smoothing antialiased
      transform translate(0,0)
      transition all 0.5s
      
      &:before
        content $fa-var-chevron-left
        
    &.closed
      span
        transform rotate(180deg)

  .entryEditor
    width 70%
    height auto
    overflow auto