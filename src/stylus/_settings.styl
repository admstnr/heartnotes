.settings-layout
  background-color $gray-darkest
  width 100%
  height 100%
  padding 40px
  text-align center
  
  h2
    color $white
    font-size 2rem
    padding-bottom 40px
    
  form
    display inline-block
    
  > .content
    margin-top 50px
    color $white
    
    h2
      color $gray-dark
    &.account
      .email-address
        p
          font-weight 100
          font-size 1.5rem
          

  .settings-top-menu
    color $gray
    .menu-tab
      display inline-block
      padding 1em 2em
      border-bottom 1px solid $gray
      cursor pointer
      &:hover
        color $white
      &.active
        cursor default
        color $white
        border-bottom none
        border-top 1px solid $gray 
        border-left 1px solid $gray 
        border-right 1px solid $gray 
        
