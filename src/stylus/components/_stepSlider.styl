.step-container
  position relative

.step-holder
  position absolute
  width 100%
  transition all 0.4s ease-out
  &.active
    opacity 1
    left 0px
  &.hidden
    opacity 0
    pointer-events none
    &.right
      left 400px
    &.left
      left -400px
    
.step
  display block
  width 100%
  text-align center
  padding 2rem 0 2rem