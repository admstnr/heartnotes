.loading
  .text
    margin-left 0.5em
    font-style italic



.logo
  font-family $header-font
  display block
  text-align center
  font-size 80px
  span
    display inline-block
    color $gray-light
    &.img
      margin -20px -15px
      background transparent url("../img/logo.svg") center center no-repeat 
      background-size 100% 100%
      width 100px
      height 160px
      transition all 1s
      &:hover
        transform rotateY(180deg) scale(1.1) 



.date-picker
  & > button
    @extends $contentActionButton


.overlay
  position fixed
  width 100vw
  height 100vh
  top 0
  left 0
  opacity 0
  pointer-events none
  background-color rgba(0, 0, 0, 0.95)
  z-index 99999999
  transition all 0.2s linear
  
  &.shown
    opacity 1
    pointer-events auto
    
  .close-overlay
    color $gray-dark
    border-color $gray-dark
    position absolute
    top 5px
    right 5px
    padding 3px 6px    
    

.ask-user-dialog
  position relative
  top 40px
  font-size 2.5rem
  line-height 1.2em
  padding 0 2em
  color $white
  .buttons
    margin-top 1em
    button
      margin 0 1em


.entryEditor
  height 100%
  width 100%
  display table
  
  .meta
    position relative
    display table-row
    height 2.5rem
    text-align center
    font-size 2em
    font-weight 100
    color $gray-dark
    
    .separator
      padding 0 0.5em
    
    .date
      font-family $header-font
      height 100%
      display inline-block
      padding-top 0.1em
      &.time
        font-size 60%
        color $gray-dark
        vertical-align baseline
        &:before
          content '-'
          padding 0 0.3em 0 0.4em
          color #ccc
          font-size 80%
      
    .date-time-picker
      position relative
      top -0.15em
      left 0.3em
      
    .delete-button
      position absolute
      right 0.1em
      top -0.1em
      .icon-button
        @extends $contentActionButton
    
  .editor
    display table-row
    .cke.cke_chrome
      // ckeditor overrides
      .cke_top[role=presentation]
        height 2rem
        padding 0.4em 0.4em 0
        background-color $gray-light
    // .cke_chrome
      // border none !important


.entry-list-filter
  background-color $gray
  padding 0.5em 0.4em 0.5em
  position relative
  input
    @extends $bigDarkInput
    font-size 0.8rem
    width 100%
  .filter-summary
    display block
    text-align center
    font-style italic
    padding 0.5em 0 0
    color $gray-darkest
    font-size 0.8rem


ul.entryList
  display block
  list-style none
  margin 0
  padding 0
  
  li
    display block
    margin 0
    border-collapse collapse
    border-top 1px $gray-light
    border-bottom 1px solid $gray-light
    
    &.break-row
      text-align center
      text-transform uppercase
      color $black
      background-color $gray-blue-light
      font-size 80%
      padding 0.4em 0
      
    &.entry
      transition background-color 0.3s linear
      color $gray-dark
      height 80px
      padding 0.5rem  
      
      &.none
        cursor default
        pointer-events none
        font-weight bold
        font-style italic
        font-size 1.5rem
      
      &:hover, &.selected
        cursor pointer
        background-color $gray-blue
        color $white
        
      > .inner
        position relative
      
        .text
          position absolute
          top 0
          right 0
          overflow hidden
          line-height 1.2em
          width calc(100% - 4rem)
          max-height calc(80px - 1rem)

        .date-time
          position absolute
          top 0
          left 0
          width 2.5rem
          text-align center
          .date
            display block
            &.day
              font-size 2.5rem
              font-weight bold
              height 2rem
              &.month
                font-size 1.2rem
                height 1.3rem
            &.time
              font-size 0.8rem
              margin-top 0.5em

        

.password-input
  position relative
  .toggle-button
    position absolute
    padding 0.2em 0.5em
    margin 5px 0 0 5px
    border-radius 5px

$popupBody
  position absolute
  display block
  z-index 20
  transition opacity 0.1s linear
  color $red-light
  border-radius 10px
  border 1px solid $red-light
  background-color $black
  padding 1em
  font-size 1.2rem
  font-style normal
  line-height 1.5em
  width 20rem
  box-shadow 0px 0px 10px 1px $red-light
  p
    margin-bottom 1em
  small
    font-size 75%

.popup-wrapper
  position relative
  
  .icon-widget
    cursor pointer

  .popup-body
    @extend $popupBody


.new-password-input
  .field
    display block
    margin 0.5em 0
  input
    display inline-block
  .strength-meter
    margin 0.5em 0 0
    display flex
    flex-direction row
    justify-content center
    align-items center
    & > label
      margin-right 1em
      font-style italic
      color $gray
      font-size 1rem
      i
        margin-left 0.3em
    & > .progress
      width 8rem
  .password-strength-hints
    font-size 100%
    line-height 1.5em
    
$progressStyles
  display inline-block
  position absolute

.progress
  @extend $progressStyles
  position relative
  border-radius 5px
  border 1px solid $gray-darker
  height 1.5rem
  font-size 0.8rem
  text-align left
  & > div
    @extend $progressStyles
    height 100%
  & > label
    @extend $progressStyles
    color $gray
    right 3px
    top 3px
    z-index 10

.collapsible
  transition all 0.3s linear
  overflow visible
  &.collapsed
    overflow hidden


.btn
  @extend $button
      

$menu
  display flex
  flex-direction column
  justify-content space-around
  align-items center

  .btn
    border-radius 10px
    color $gray-dark
    border-color $gray-darker
    font-size 16px
      
    &.active, &:hover
      border-color $white
      background-color $black
      color $white


.main-menu
  @extend $menu
  height 200px
      
.sub-menu
  @extend $menu
  padding-bottom 10px
  button
    margin-top 20px
    padding 4px 8px    
        

.notification
  position fixed
  top 10px
  right 10px
  padding 10px
  font-size 1rem
  z-index 99999999
  border-radius 10px
  transition 0.5s
  
  &.info
    background-color rgb(100, 100, 100, 0.7)
    color $white
  
  &.error
    background-color rgb(255, 0, 0, 0.7)
    color $white

  &.on
    opacity 1
    
  &.off
    opacity 0
  
  

.action-progress
  position relative
  .msg
    display block
    margin 1rem auto
    color $red-light
    font-size 1.2rem
    font-style normal
    line-height 1.5em
    width 20rem
    transition all 0.2s linear
    max-height 0
    &.shown
      max-height 10000px
      padding 1em
      border 1px solid $red-light
      border-radius 10px
      box-shadow 0px 0px 10px 1px $red-light


@import "./_dateTimePicker"
@import "./ladda/_buttons"
@import "./pikaday/_index"
@import "./selectBox/_index"
