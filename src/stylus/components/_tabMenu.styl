.tab-menu
  color $gray
  .tab
    position relative
    display inline-block
    padding 1em 2em
    border-bottom 1px solid $gray
    cursor pointer
    .attention
      display inline-block
      margin-right 0.5em
    &:hover
      color $white
    &.active
      cursor default
      color $white
      border-bottom none
      border-top 1px solid $gray 
      border-left 1px solid $gray 
      border-right 1px solid $gray 
      
