font-face-register($name, $filename, $weight="normal", $style="normal")
  @font-face
    font-family $name
    src url($fa-font-path + '/' + $filename + '.eot')
    src url($fa-font-path + '/' + $filename + '.eot?#iefix') format('embedded-opentype'),
         url($fa-font-path + '/' + $filename + '.woff') format('woff'),
         url($fa-font-path + '/' + $filename + '.ttf') format('truetype'),
         url($fa-font-path + '/' + $filename  + '.svg#RobotoBold') format('svg');
    font-weight $weight
    font-style $style

$button
  position relative
  background-color $black
  border 1px solid $gray
  color $gray
  font-size 1rem
  font-family $body-font
  font-weight bold
  cursor pointer
  padding 16px 18px
  border-radius 10px
  -webkit-appearance none
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color transparent
  transition 0.2s linear background-color
  
  &:hover
    background-color $gray-blue
    color $black
    
  &[disabled]  
    cursor inherit
    border 1px solid $gray-darker
    color $gray-darker
    &:hover
      background-color $black
      color $gray-darker
      
  .attention
    position absolute
    right -9px
    top -8px
      

$contentActionButton
  background-color $white
  color $gray-darker
  padding 2px 5px
  border-radius 5px
  transition 0.1s linear background-color
  &:hover
    background-color $gray-dark
    color $white


$insideInputButton
  background-color transparent
  color $gray
  padding 0
  border-radius 50px
  border none
  transition 0.1s linear all
  &:hover
    color $black
    


$bigDarkInput
  font-size 1.5rem
  padding 0.3em 0.5em
  font-family $body-font
  border-radius 10px
  border 1px solid transparent
  background-color $gray-light

  &:hover, &:focus
    background-color $white
    
  &:focus
    outline none
    border 1px solid lighten($red, 50%)
  
      
$normalLink
  color $link-color
  text-decoration none
  border-bottom 1px solid $link-color
  &:hover
    color $white
    background-color $link-color
      

$blendLink
  color inherit
  border-bottom 1px solid inherit
  

$noLink
  color inherit
  border-bottom none
  text-decoration none
  background-color transparent
  &:hover
    color inherit
    background-color transparent


$entryContentStyles
  font-family $body-font
  font-weight 500
  font-style normal
  font-size 1rem
  line-height 1.6em
  color $gray-darker
  p
    margin 1em 0
    &:first-child
      margin-top 0
  h1
    font-size 300%
    color $black
    margin 1em 0
  h2
    font-size 150%
    color $gray-darker
    margin 1em 0
  blockquote
    display block
    background $gray-light
    margin 1em
    padding 1em 0.4em
    color $gray-dark
    border-radius 5px
    quotes "\201C""\201D""\2018""\2019"
    &:before
      color $gray
      content open-quote
      font-size 4em
      line-height 0.1em
      margin-right 0.25em
      vertical-align -0.4em
    p
      display inline
  a, a:visited
    cursor pointer
    text-decoration none
    border-bottom 1px solid $entry-link-color
    color $entry-link-color
    background-color transparent
    &:hover, &:active
      background-color $entry-link-color
      color $entry-link-color-inverse
  strong
    font-weight 700
    color inherit
  small
    font-size 50%
  code
    font-family $code-font
    background-color $gray-light
  em
    font-style italic
  s
    text-decoration line-through
  u
    text-decoration underline
  ul
    list-style-type disc
    list-style-position inside
    margin 1em 0
    li
      padding-left 1em
    ul
      list-style-type circle
      list-style-position inside
      margin-left 15px
    ol
      list-style-type lower-latin
      list-style-position inside
      margin-left 15px
  ol
    list-style-type decimal
    list-style-position inside
    margin 1em 0
    li
      padding-left 1em
    ul
      list-style-type circle
      list-style-position inside
      margin-left 15px
    ol
      list-style-type lower-latin
      list-style-position inside
      margin-left 15px
