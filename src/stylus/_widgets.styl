.logo
  font-family lobstertwo, $body-font
  display block
  text-align center
  font-size 80px
  span
    display inline-block
    color $gray-light
    &.img
      margin -20px -15px
      background transparent url("/img/logo.svg") center center no-repeat 
      background-size 100% 100%
      width 100px
      height 160px


.entryEditor
  height 100%
  width 100%
  display table
  
  .meta
    display table-row
    height 2rem
    text-align center
    font-size 2em
    font-weight 100
    text-transform uppercase
    color $gray
    
  .editor
    display table-row
    .body
      // ckeditor overrides
      .cke_top[role=presentation]
        height 2rem
        padding 0.1em 0 0
    // .cke_chrome
      // border none !important



ul.entryList
  display block
  list-style none
  margin 0
  padding 0
  
  li
    display block
    margin 0
    border-collapse collapse
    border-top 1px $gray-light
    border-bottom 1px solid $gray-light
    
    &.month
      text-align center
      text-transform uppercase
      color $gray
      background-color $gray-light
      font-size 80%
      padding 0.2em 0
      
    &.entry
      padding 0.5em
      display flex
      flex-direction row
      justify-content space-around
      align-items stretch
      flex-wrap nowrap
      transition background-color 0.5s
      
      &:hover, &.selected
        cursor pointer
        background-color lighten($theme1_col5, 80%)
      
      .text
        overflow hidden
        max-height 3em

      .date
        font-size 1.4rem  
        padding 0 0.7em 0 0.4em
        color $gray
      
        display flex
        flex-direction column
        justify-content center
        align-items center
        

.password-input
  .icon-button
    padding 0.2em 0.5em
    margin-left 5px
    border-radius 5px

$popupBody
  position absolute
  display block
  z-index 20
  transition opacity 0.1s linear
  color $red-light
  box-sizing border-box

.popup-wrapper
  position relative
  box-sizing border-box
  .popup-body
    @extend $popupBody
    display block
    border-radius 10px
    border 1px solid $red-light
    background-color $black
    padding 1em
    font-size 1.2rem
    line-height 1.5em
    width 15rem
    box-shadow 0px 0px 10px 1px $red-light
  .popup-arrow
    @extend $popupBody
    font-size 3rem
    line-height 1rem
  &.hidden
    .popup-body, .popup-arrow
      opacity 0
      pointer-events none


.new-password-input
  .field
    display block
    margin 1em 0
  input
    display inline-block
  .strength-meter
    display block
    margin 1em 0
    

.progress
  box-sizing border-box
  width 100%
  border-radius 5px
  border 1px solid $gray-darker
  height 1.5rem
  text-align left
  & > div
    box-sizing border-box
    display inline-block
    height 100%
    text-align center

.collapsible
  transitiona all 0.3s linear



button
  @extend $button
      
