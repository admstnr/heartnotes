@import "nib"
@import "rupture"
@import "_variables"
@import "_mixins"
@import "../../bower_components/font-awesome-stylus/stylus/font-awesome.styl"
@import "_widgets"


html
  font-family 'Lato', Arial, Verdana, sans-serif
  font-weight 300
  font-style normal
  font-size 16px
  background-color #fff
  color #000
  

form
  legend
    font-weight 700
    margin-top 1.5em
    &:first-child
      margin-top 0
  .control-group
    margin 1em 0 0
    & label.main
      font-style italic
      margin 0.5em 0
  .between-text
    text-align center
    padding-top 0.8rem
  .smaller
    font-size 80%


.loading
  fa 'refresh'
  &:before
    animation spin 2s infinite linear
    margin-right 0.5em

i.fa + span
  margin-left 0.5em


nav.topbar
  position fixed
  top 0px
  left 0px
  width 100%
  height $navbar-height
  line-height $navbar-height
  padding 0 1rem
  font-weight 100
  box-shadow 0px 0px 5px 3px #999
  color #333
  z-index 2
  
  .brand
    font-size 130%
    display inline-block  
    
  .loading, .count
    display inline-block
    margin-left 1.5em
    color #000
    font-weight 700
    font-size 150%
    
  .count
    display none
    .sub
      font-size 50%
  


aside.tools
  position fixed
  top $navbar-height + 10px
  left 10px
  width 100%
  background-color #fff
  border-radius 8px
  padding 1em
  font-weight 100
  box-shadow -1px 0px 7px 3px #999
  min-height 500px
  width 250px
  color #333
  z-index 2
  


main.content
  position relative
  top $navbar-height
  width 100%


.view-template
  display none




#map
  .leaflet-div-icon
    background transparent
    border none    
    .map-cluster-marker
      display block
      background transparent url("img/crosshair.svg") -50% -50% no-repeat
      background-size 100% 100%
      text-align center
      span
        font-weight bold
        font-size 120%
      
      marker-cluster-cat 'small', 40px, 40px
      marker-cluster-cat 'medium', 50px, 50px
      marker-cluster-cat 'large', 65px, 55px
      marker-cluster-cat 'x-large', 65px, 65px
      marker-cluster-cat 'xx-large', 70px, 70px
      
.map-popup-details
  p.outcome
    font-size 120%
    font-weight bold
    text-transform uppercase
    &.wounded
      color $color4
    &.killed
      color red

        
          
    
    
