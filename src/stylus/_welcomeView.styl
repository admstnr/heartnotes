.welcomeView
  width 100%
  height 100%
  background-color $black
  color $white
  
  display flex
  flex-direction column
  align-items center
  justify-content center

  .logo
    margin 0 auto 2rem

  .steps-enter-active 
    display block
    
  .steps-leave-active 
    display none    
    
  .step
    min-height 10rem

  .step.start
    text-align center
    
    .open-existing
      margin 1rem 0
      padding 2rem 0
      border-bottom 1px dashed $gray-darker
      
      p
        margin 0 0 2rem
        label
          font-style italic
          margin-right 0.5rem
        span
          font-weight bold
    
    .alert
      max-width 25rem
      margin 0 auto
      
    .create-new
      margin 2rem 0
      
