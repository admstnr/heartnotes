.welcomeView
  width 100%
  height 100vh
  padding-top 5rem
  background-color $black
  color $white
  overflow-x hidden
  
  footer
    position fixed
    bottom 8px
    right 8px
    color $gray-dark
    font-size 0.7rem
    
    span.new-version
      margin-right 10px
      a
        font-size 120%
      
    span.version
      &:after
        content '/'
        color $gray-darker
        padding 0 0.5em
        
    span.version, span.homepage-link
      a
        text-transform uppercase
        color $gray-dark
        border none
        &:hover
          color $white
  
  .logo
    margin 0 auto 2rem
    
  .step-container
    position relative

  .step-holder
    position absolute
    width 100%
    transition all 0.4s ease-out
    &.active
      opacity 1
      left 0px
    &.hidden
      opacity 0
      pointer-events none
      &.right
        left 400px
      &.left
        left -400px
      
  .step
    display block
    width 100%
    text-align center
    padding-top 2rem
    
    &.start
      font-size 1.5rem

      .open-existing
        display block
        margin 0
        padding 0
              
        p
          margin 0 0 2rem
          label
            font-style italic
            margin-right 0.5rem
          span
            font-weight bold
            
        &:after
          display block
          margin 1.5rem 0 2rem
          content "- - - - - - - - - - - - - - -"
          color $gray-dark
      
      .choose-diary
        button
          padding 0.2em 0.4em 0.2em 0.5em
          margin -15px 0 0 10px
          
      .create-new
        &:before
          margin 1.5rem 0 2rem
          display block
          

    &.new-diary
      p
        font-size 2rem
        &.info1
          margin-bottom 0.7em
        &.info2
          font-size 1.3rem
          margin 0.5em 0 3rem

      form
        margin-top 2rem
        .input-fields
          font-size 1.5rem
          max-width 12em
          margin-left auto
          margin-right auto
      & > button
        margin-top 20px
        
    &.load-diary
      font-size 2rem
      
      p
        margin-bottom 2rem
        
      .error
        color $red
        margin 2rem auto
        max-width 80%
        font-size 80%
        span
          margin-left 10px
        
        
        









        
