.welcomeView
  box-sizing border-box
  width 100%
  height 100vh
  padding-top 5rem
  background-color $black
  color $white
  
  .logo
    margin 0 auto 2rem
    
  .step-container
    position relative

  .step-anim-holder
    text-align center
    &.steps-enter
      display none
    &.steps-enter-active
      display block
    &.steps-leave
      display block
    &.steps-leave-active
      display none
    
  .step
    display inline-block
    box-sizing border-box
    padding-top 2rem
    
    &.start
      font-size 1.5rem

      .open-existing
        display block
        margin 0
        padding 0 0 2rem
              
        p
          margin 0 0 2rem
          label
            font-style italic
            margin-right 0.5rem
          span
            font-weight bold
      
      .create-new
        &:before
          margin 0 0 2rem
          display block
          content "- - - - - - - - - - - - - - -"
          color $gray-dark
          border-sizing border-box
          

    &.new-diary
      width 70%
      
      p, ul
        font-size 1.5rem









        
