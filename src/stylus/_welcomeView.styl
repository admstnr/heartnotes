.welcomeView
  box-sizing border-box
  width 100%
  height 100vh
  padding-top 5rem
  background-color $black
  color $white
  
  .logo
    margin 0 auto 2rem
    
  .step-container
    position relative

  .step-holder
    position absolute
    width 100%
    transition all 0.4s ease-out
    &.active
      opacity 1
      left 0px
    &.hidden
      opacity 0
      pointer-events none
      &.right
        left 400px
      &.left
        left -400px
      
  .step
    display block
    width 100%
    text-align center
    box-sizing border-box
    padding-top 2rem
    
    &.start
      font-size 1.5rem

      .open-existing
        display block
        margin 0
        padding 0
              
        p
          margin 0 0 2rem
          label
            font-style italic
            margin-right 0.5rem
          span
            font-weight bold
      
      .create-new
        &:before
          margin 0 0 2rem
          display block
          content "- - - - - - - - - - - - - - -"
          color $gray-dark
          border-sizing border-box
          

    &.new-diary
      p
        font-size 1.5rem

      form
        margin-top 2rem
        
    &.load-diary
      font-size 2rem
      .error
        color $red
        margin 2rem 0
        
        









        
