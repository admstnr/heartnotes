@import "_variables"
@import "_mixins"
@import "nib"
@import "rupture"
@import "../../node_modules/font-awesome-stylus/stylus/font-awesome.styl"
@import "_fonts"



global-reset()


html
  font-family $body-font
  font-size 16px
  background-color #fff
  color #000

h1, h2, h3
  font-weight bold

img
  border none

form
  .field.row
    display block
    margin 0 0 1.5em
  input
    box-sizing border-box
    &[type=text], &[type=password]
      font-size 1.5rem
      padding 0.3em 0.5em
      font-family $body-font
      border-radius 10px
      border 1px solid transparent
      background-color $gray-light

      &:hover, &:focus
        background-color $white
        
      &:focus
        outline none
        border 1px solid lighten($red, 50%)




// main grid

#layout
  position relative
  top 0
  left 0

#sidebar
  background-color $black
  position fixed
  top 0
  left 0
  width 8%
  height 100%

  display flex
  flex-direction column
  justify-content flex-start
  
  .logo
    span
      width 40px
      height 64px
      
  .menu
    list-style none
    padding 0
    margin 60px 0 0
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    
    height 18rem

    .btn
      @extend $button
      width 100%
      height 100%
      width 14px
      height 14px
      font-size 16px
      border-radius 10px
      color $gray-dark
      border-color $gray-darker
      
      &.active, &:hover
        border-color $white
        background-color $black
        color $white


#content
  position absolute
  left 8%
  width 92%
  top 0
  height 100vh
  

#welcome-content
  width 100%
  height 100vh
  


// lower-level

@import '_widgets'
@import '_welcomeView'
@import '_entriesView'
@import '_newEntry'






