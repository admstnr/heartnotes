@import "_variables"
@import "_mixins"
@import "nib"
@import "rupture"
@import "../../node_modules/font-awesome-stylus/stylus/font-awesome.styl"
@import "_fonts"



global-reset()

*
  box-sizing border-box


html
  font-family $body-font
  font-size 16px
  background-color #fff
  color #000

h1, h2, h3
  font-weight bold

img
  border none

form
  .row
    display block
    &.field
      margin 0 0 1rem
    &.action
      margin 1.5rem 0 0
    &.close
      display none
    &.open
      display block
  input
    &[type=text], &[type=password]
      @extends $bigDarkInput

a
  @extend $normalLink



// main grid

#layout
  position relative
  top 0
  left 0


#content-wrapper
  position relative
  top 0
  left 0
  width 100%
  height 100vh


#footer-bar
  position fixed
  bottom 0
  left 0
  height 1rem
  width 100%
  background-color $black
  color $white
  font-size 0.7rem



#sidebar
  background-color $black
  position fixed
  top 0
  left 0
  width 8%
  height 100%

  display flex
  flex-direction column
  justify-content space-between
  
  .logo
    span
      width 40px
      height 64px
      

#content
  position absolute
  left 8%
  width 92%
  top 0
  height 100%

#welcome-content
  height 100%
  width 100%

  




// lower-level

@import 'components/_index'
@import '_menubar'
@import '_footer'
@import '_welcomeView'
@import '_entriesView'
@import '_newEntry'
@import '_settings'






